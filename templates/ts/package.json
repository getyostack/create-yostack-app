{
  "name": "{{appName}}",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "serve": "rollup -c -w --environment mode:dev",
    "package": "npm run build && node tools/tar.js",
    "dev-update": "npx -p create-yostack-app update-dev",
    "public-release": "npm run build && npx -p create-yostack-app release-code public",
    "custom-release": "npm run build && npx -p create-yostack-app release-code custom"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@rollup/plugin-virtual": "^2.0.3",
    "lerna": "^4.0.0",
    "postcss": "^8.4.5",
    "rollup": "^2.63.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.45.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  }
}
